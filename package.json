{
  "name": "workshop-modern-ui-design",
  "version": "1.2.0",
  "description": "The repo for the design workshop at HS Bremerhaven",
  "main": "index.html",
  "scripts": {
    "start": "postcss styles/index.css -o assets/styles.css -w",
    "build": "cross-env NODE_ENV=production postcss styles/index.css -o assets/styles.css"
  },
  "gitHooks": {
    "pre-commit": "lint-staged && npm run build && git add assets/styles.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jonaskuske/workshop-modern-ui-design.git"
  },
  "author": "Jonas Kuske",
  "license": "",
  "bugs": {
    "url": "https://github.com/jonaskuske/workshop-modern-ui-design/issues"
  },
  "homepage": "https://github.com/jonaskuske/workshop-modern-ui-design#readme",
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.3.0",
    "@prettier/plugin-php": "^0.13.0",
    "autoprefixer": "^9.7.1",
    "cross-env": "^6.0.3",
    "cssnano": "^4.1.10",
    "lint-staged": "^9.4.2",
    "postcss-cli": "^6.1.3",
    "postcss-import": "^12.0.1",
    "prettier": "^2.0.2",
    "yorkie": "^2.0.0"
  },
  "dependencies": {
    "tailwindcss": "^1.1.3",
    "tailwindcss-interaction-variants": "^2.2.0"
  },
  "lint-staged": {
    "*.{js,json,css,md,html}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 100,
    "tabWidth": 2
  }
}
